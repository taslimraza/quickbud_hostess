<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#fde75c" />
            <stroke
                android:width="1dp"
                android:color="#f8d229" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="3dp"
                android:top="0dp"
                android:right="3dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fde75c"
                android:endColor="#f8d229"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#f8d229" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="3dp"
                android:top="0dp"
                android:right="3dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>