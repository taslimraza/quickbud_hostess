<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    
	<TableLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    >
	
	    <TableRow
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			>        
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="5dp"
		        android:text="Name"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    <EditText
		        android:id="@+id/editName"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:hint="Name"
		        android:ems="10" />
		</TableRow>
	    <TableRow
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			>        
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="5dp"
		        android:text="Seats"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    <EditText
		        android:id="@+id/editSeats"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:inputType="number"
		        android:hint="Seats"
		        android:ems="10" />
		</TableRow>
	    <TableRow
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			>        
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="5dp"
		        android:text="Type"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    <Spinner
		        android:id="@+id/editType"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:hint="Type"
		        android:entries="@array/tabletype_arrays"
		        android:ems="10" />
		</TableRow>
	    	
	</TableLayout>
    <LinearLayout
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
		>        
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/btnOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK" />

    </LinearLayout>
</LinearLayout>
