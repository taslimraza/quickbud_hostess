<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/name"
        style="@style/DndText"
        android:textStyle="bold"
        android:layout_width="180dp"
        android:text="@string/name" />

	<TextView
        android:id="@+id/special_needs"
        style="@style/DndText"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:text="@string/special_needs" />
    
	<TextView
        android:id="@+id/time_in"
        style="@style/DndText"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:text="@string/time_in" />
	    
	<TextView
        android:id="@+id/party_size_header"
        style="@style/DndText"
        android:textStyle="bold"
        android:text="@string/party_size"
        android:layout_width="100dp" />

    <TextView
        android:id="@+id/wait_time"
        style="@style/DndText"
        android:textStyle="bold"
        android:text="@string/wait_time"
        android:layout_width="150dp" />
        
    <TextView
        android:id="@+id/status"
        style="@style/DndText"
        android:textStyle="bold"
		android:layout_width="100dp"
        android:text="@string/patron_status"
         />
        
    <TextView
        android:id="@+id/order_in"
        style="@style/DndText"
        android:textStyle="bold"
		android:layout_width="80dp"
        android:text="@string/order_in"
         />
    
    
</LinearLayout>